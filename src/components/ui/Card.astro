---
interface Data {
  title: string;
  url: string;
  img: string;
  image?: string;
  poster?: string; 
  episode?: string;
  type?: string;
  status?: string;
  quality?: string; 
  score?: string;
  id?: string;
  slug?: string;
}

interface Props {
  data: Data[] | null;
  loadingNumber?: number; 
  search?: boolean;
}

const { data, search } = Astro.props;
---

{
  data &&
    data.map((item, index) => {
      // 1. Prioritaskan poster (format baru), lalu image, lalu img
      const rawImg = item.poster || item.image || item.img || "";
      
      // 2. Handle gambar dari wp.com (optimasi)
      const imgSrc = rawImg.includes("wp.com")
        ? `${rawImg}?quality=50&w=240`
        : rawImg;

      const title = item.title;
      const episodeParam = item.episode
        ? `?episode=${item.episode.split(" ")[1]?.split("/")[0]}`
        : "";

      const linkTo = `/watch/${item.id}/${item.slug}${episodeParam}`;

      return (
        <div
          key={index}
          class="card aspect-[3/4] group relative select-none shadow rounded max-h-96"
        >
          <figure>
            <img
              src={`${imgSrc}`}
              width={240}
              height={340}
              alt={item.title}
              loading="lazy"
              class="card-image object-cover aspect-[3/4] rounded w-full h-full"
            />

            {item.quality && (
                <div class="absolute top-2 right-2 bg-black/60 backdrop-blur-sm text-white text-[10px] px-1.5 py-0.5 rounded font-bold border border-white/10">
                    {item.quality}
                </div>
            )}
          </figure>

          <div class="w-full absolute bottom-0 bg-base-100/50 group-hover:backdrop-blur-sm transition-[height] max-h-[100%] h-20 md:h-22 group-hover:h-96 flex flex-col justify-center items-center rounded">
            <h3 class="text-sm md:text-md font-bold absolute top-2 line-clamp-2 group-hover:line-clamp-5 text-center px-1">
              {title}
            </h3>

            <div class="absolute bottom-1 flex flex-col gap-4">
              <a
                href={linkTo}
                class="hidden group-hover:flex btn btn-primary btn-sm"
              >
                {search ? (
                  <span class="search-link">Tonton</span>
                ) : (
                  <>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="lucide lucide-play size-4"
                    >
                      <polygon points="5 3 19 12 5 21 5 3" />
                    </svg>
                    Tonton
                  </>
                )}
              </a>
              <p class="text-center text-xs font-semibold text-white drop-shadow-md">
                {item.episode || item.type || item.status || (item.score ? `â˜… ${item.score}` : "")}
              </p>
            </div>
          </div>
        </div>
      );
    })
}

<script>
  document.querySelectorAll(".search-link").forEach((link) => {
    link.addEventListener("click", () => {
      const menuSearch = document.getElementById("menu-search");
      menuSearch?.close?.();
    });
  });
</script>
